<resources>

    <!-- Base application theme. -->
    <style name="AppLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorText">@android:color/primary_text_light</item>
        <item name="normalBackground">@color/backgroundNormalLight
        </item>
        <item name="selectedBackground">@color/backgroundSelectedLight
        </item>
        <item name="menuThemeDarkVisibility">@integer/view_visible
        </item>
        <item name="menuThemeLightVisibility">@integer/view_gone</item>
    </style>

    <style name="AppDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorText">@android:color/primary_text_dark</item>
        <item name="normalBackground">@color/backgroundNormalDark</item>
        <item name="selectedBackground">@color/backgroundSelectedDark
        </item>
        <item name="menuThemeDarkVisibility">@integer/view_gone</item>
        <item name="menuThemeLightVisibility">@integer/view_visible
        </item>
    </style>

</resources>
